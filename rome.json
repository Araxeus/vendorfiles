{
  "files": {
    "ignore": [
      "./.pnp.*",
      "./dist/*",
      "./vendor/*",
      "./lib/auth.js"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 4,
    "ignore": [
      "*.json"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "error"
      },
      "style": {
        "noParameterAssign": "off"
      },
      "nursery": {
        "recommended": true
      }
    }
  }
}
